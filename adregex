# è¾“å‡ºè§„åˆ™
text_rule_print(){
    echo "/add@WuMingv2Bot (?i:(${b_keyword1}).*(${b_keyword2}|${b_keyword2p})|(${b_keyword2}|${b_keyword2p}).*(${b_keyword1})|(${s_keyword})|\.(${file_type})\$)===æ£€æµ‹åˆ°å¹¿å‘Šï¼Œå·²åˆ é™¤ï¼Œå¦‚è¯¯åˆ è¯·è”ç³»ç¾¤ç»„ç®¡ç†å‘˜ã€‚&&å°è™é²¨ç–¯äº†&&å·²å‡»æ¯™å¹¿å‘Š&&äººå·¥æ™ºéšœå·²åˆ é™¤å¹¿å‘Š&&å‘å¹¿å‘Šçš„è¿˜èƒ½è¯´è¯å—&&del=x=0ã€y=60"
}

file_type_print(){
    echo "/add@WuMingv2Bot ftype=(${file_type})===å¯ç–‘æ–‡ä»¶ï¼Œç¦è¨€1åˆ†é’Ÿ&&å°è™é²¨ç–¯äº†ï¼Œç¦è¨€1åˆ†é’Ÿ&&adm=ban=60&&del=x=0ã€y=60"
}

file_name_print(){
    echo "/add@WuMingv2Bot fname=(${file_name})===å¯ç–‘æ–‡ä»¶ï¼Œç¦è¨€1åˆ†é’Ÿ&&å°è™é²¨ç–¯äº†ï¼Œç¦è¨€1åˆ†é’Ÿ&&adm=ban=60&&del=x=0ã€y=60"
}

name_rule_print(){
    echo "/add@WuMingv2Bot name=(${nickname}|${b_keyword1})===å¯ç–‘æ˜µç§°ï¼Œç¦è¨€1åˆ†é’Ÿ&&å°è™é²¨ç–¯äº†ï¼Œç¦è¨€1åˆ†é’Ÿ&&adm=ban=60&&del=x=0ã€y=60"
}

re_print(){
    #æ£€æŸ¥æ˜¯å¦å·²è¢«è¾“å‡º
    if [ "${re_printed[$1]}" != "1" ] ;then
        re_printed[$1]=1
        case "$1" in
           1)
                #é»˜è®¤è¾“å‡º
                echo -e "\033[7;96madregex: æ–‡æœ¬æ¶ˆæ¯è§„åˆ™\033[0m"
                text_rule_print
                ;;
           2)
                #æ–‡ä»¶ç±»å‹
                echo -e "\033[7;96madregex: æ–‡ä»¶ç±»å‹è§„åˆ™\033[0m"
                file_type_print
                ;;
           4)
                #æ–‡ä»¶å
                echo -e "\033[7;96madregex: æ–‡ä»¶åè§„åˆ™\033[0m"
                file_name_print
                ;;
           8)
                #æ˜µç§°
                echo -e "\033[7;96madregex: æ˜µç§°è§„åˆ™\033[0m"
                name_rule_print
                ;;
           16)
                #
                echo -e "\033[7;96madregex: è§„åˆ™\033[0m"
                
                ;;
           win)
                #åˆå¹¶(æ‹·è´è‡³Windowså‰ªè´´æ¿)
                echo -e "\033[7;96madregex: æ–‡æœ¬æ¶ˆæ¯è§„åˆ™ For Windows\033[0m"
                text_rule_print | clip.exe
                echo "å·²è‡ªåŠ¨æ‹·è´è‡³å‰ªè´´æ¿"
                ;;
           *)
                #
                ;;
        esac
    fi

}

# è¾“å‡ºå¸®åŠ©
help_print(){
    echo "adregx: help\nè¾“å…¥ 1 è·å–æ–‡ä»¶åç¼€è§„åˆ™\nè¾“å…¥ 2 è·å–å•å…³é”®è¯è§„åˆ™\nè¾“å…¥ 4 è·å–åŒå…³é”®è¯è§„åˆ™\nè¾“å…¥ 8 è·å–æ˜µç§°è§„åˆ™\nè¾“å…¥ 0 æˆ–ä»€ä¹ˆéƒ½ä¸è¾“å…¥ è·å–åˆå¹¶è§„åˆ™å’Œæ˜µç§°è§„åˆ™\nåŒæ—¶è·å–å¤šæ¡è§„åˆ™ï¼Œè¯·å°†ä»¥ä¸Šå‚æ•°ç›¸åŠ æˆ–è€…ä½¿ç”¨ç©ºæ ¼éš”å¼€"
}

# è¾“å‡ºé”™è¯¯
err_print(){
    echo -e "\033[1;91;103madregex: invalid parameter value \"$1\"\033[0m"
    help_print
}

# è¾“å‡ºå†è§
goodbye_print(){
    echo -e "\033[7;92madregex: å·²ä¸ºæ‚¨ç”Ÿæˆ ${#re_printed[@]} æ¡è§„åˆ™ï¼Œæ„Ÿè°¢ä½¿ç”¨\033[0m"
}


# è¯»å–ï¼Œåˆ‡å‰²å‚æ•°
parameter_read(){
    #åˆå§‹åŒ–è¾“å‡ºè®°å½•
    re_printed=()
    #æ— å‚æ•°ï¼Œè¾“å‡ºé»˜è®¤
    if [ $# -eq 0 ] ;then parameter_read 0; fi
    #ä¾æ¬¡è¯»å–å‚æ•°ï¼Œå¹¶åˆ¤æ–­æ˜¯å¦å…¨éƒ¨è¾“å‡ºè¿‡
    while [ "${#re_printed[@]}" -lt 5 ] && [[ $# -ge 1 ]] ;do
        key="$1"
        case $key in
            0) re_print 8; re_print 4; re_print 2; re_print 1;;
            [1-9]) ;& [1-9][0-9])
                factor=16 # 2^4
                if [ "$key" -ge "$factor" ]; then
                    error="true"
                    break
                else
                    while [ "$factor" -gt 1 ]; do
                        factor=$((factor/2))
                        while [ "$key" -ge "$factor" ] ;do
                            let key-=$factor
                            re_print $factor
                        done
                    done
                fi
                ;;
            *help*)
                help_print
                break
                ;;
            win)
                re_print win
                ;;
            *)
                error="true"
                break
                ;;
        esac
        shift
    done
}

# è¯»å–ä¼ å…¥çš„å…¨éƒ¨å‚æ•°
parameter_read $@

# æ£€æŸ¥å‚æ•°
while [ "$error" == "true" ]; do
    err_print $key
    error="false"
    echo -n "è¯·é‡æ–°è¾“å…¥å‚æ•°ï¼Œæˆ–è¾“å…¥exité€€å‡ºï¼š"
    if read -t 60; then
        if [ "$REPLY" == "exit" ]; then
            exit 0
        else
            parameter_read $REPLY
        fi
    else
        echo "è¾“å…¥è¶…æ—¶æˆ–è¢«å–æ¶ˆï¼Œè¾“å‡ºé»˜è®¤è§„åˆ™"
        parameter_read
    fi
done

goodbye_print
